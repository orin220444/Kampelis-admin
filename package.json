  "bugs": {
    "url": "https://gitlab.com/orin220444/adminchatbot/issues"
  },
  "homepage": "https://gitlab.com/orin220444/adminchatbot#readme",
  "dependencies": {
    "dotenv": "^8.2.0",
    "mongoose": "^5.9.11",
