  "bugs": {
    "url": "https://gitlab.com/orin220444/adminchatbot/issues"
  },
  "homepage": "https://gitlab.com/orin220444/adminchatbot#readme",
  "dependencies": {
    "dotenv": "^8.2.0",
    "mongoose": "^5.9.3",
    "path": "^0.12.7",
    "telegraf": "^3.36.0",
    "telegraf-i18n": "^6.6.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "nodemon": "^2.0.2",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7"
